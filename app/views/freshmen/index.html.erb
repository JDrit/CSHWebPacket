    <title>Freshmen Packets</title>

    <!-- Custom styles for this template -->
    <style>

      body {
        padding-top: 70px;
        padding-bottom: 30px;
      }

      .theme-dropdown .dropdown-menu {
        position: static;
        display: block;
        margin-bottom: 20px;
      }

      .theme-showcase > p > .btn {
        margin: 5px 0;
      }

    </style>
  </head>

  <body role="document">

    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if @user %>
              <%= link_to 'CSH Packet', upperclassman_show_path(@user.id), { class: "navbar-brand" } %>
          <% else %>
              <%= link_to 'CSH Packet', signatures_path, { class: "navbar-brand" } %>
          <% end %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <% if @user %>
              <li><%= link_to 'My Packet', upperclassman_show_path(@user.id) %></li>
            <% end %>
            <li><%= link_to 'Grid', signatures_path %></li>
            <li class="active"><%= link_to 'Freshmen Packets', freshmen_index_path %></li>
            <li><%= link_to 'Upperclassmen Packets', upperclassmen_index_path %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container theme-showcase" role="main">

      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="page-header">
        <h1>Freshmen Packets</h1>
        <% if @admin %>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Freshman</button>
    </div>

    <!-- Modal -->
            <%= form_for :freshman do |f| %>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Add Freshman</h4>
          </div>
          <div class="modal-body">
            <p>
              <%= f.text_field :name, { class: "form-control", placeholder: "Name", autocomplete: "off" } %>
            </p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <%= f.submit 'Add Freshman', { class: 'btn btn-success' }%>
        </div>
      </div>
    </div>
            <% end %>
        <% end %>
      </div>

      <div class="table-responsive">
        <table class="table table-bordered table-striped table-condensed">
          <thead>
            <tr>
              <th>Name</th>
              <th>Signatures Received</th>
            </tr>
          </thead>

          <tbody>
            <% @freshmen.each do |f| %>
              <tr>
                <td><%= link_to "#{f[0].name}", freshman_show_path(f[0].id) %></td>
                <td><%= f[1] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div> <!-- /container -->

